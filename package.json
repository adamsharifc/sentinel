{
	"name": "Sentinel",
	"description": "A Chrome extension for tracker blocking and fingerprinting protection.",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox --mv3",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare"
	},
	"dependencies": {
		"@wxt-dev/storage": "^1.1.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"use-sync-external-store": "^1.5.0",
		"webextension-polyfill": "^0.12.0"
	},
	"devDependencies": {
		"@types/chrome": "^0.1.4",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.8",
		"@wxt-dev/module-react": "^1.1.3",
		"typescript": "^5.9.2",
		"wxt": "^0.20.8"
	}
}
